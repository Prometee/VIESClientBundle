{
    "name": "prometee/vies-client-bundle",
    "description": "European VAT Information Exchange System SOAP client bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Francis HILAIRE",
            "email": "Prometee@users.noreply.github.com"
        }
    ],
    "require": {
        "prometee/vies-client": "^1.0",
        "symfony/http-kernel": "^3.4|^4.4|^5.4",
        "symfony/dependency-injection": "^3.4|^4.4|^5.4",
        "symfony/config": "^3.4|^4.4|^5.4",
        "symfony/validator": "^3.4|^4.4|^5.4"
    },
    "require-dev": {
        "ext-soap": "*",
        "phpunit/phpunit": "^8|^9",
        "symplify/easy-coding-standard": "^10.0.8",
        "phpstan/phpstan": "^1",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Prometee\\VIESClientBundle\\": "."
        }
    },
    "scripts": {
        "analyse": [
            "@composer validate --strict",
            "@php vendor/bin/ecs check .",
            "@php vendor/bin/phpstan.phar analyse -c phpstan.neon -l max .",
            "@php vendor/bin/psalm"
        ],
        "fix": [
            "@php vendor/bin/ecs check . --fix"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
